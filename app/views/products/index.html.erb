<h1>Products#index</h1>
<table> 
  <th>Title</th>
  <th>Show</th>
  <th>Edit</th>
  <th>Orders</th>
  
  <% @products.each do |product| %>
  <tr>  
    <td><%= product.title %></td>
    <td><%= button_to "Show",product_path(product),method: :get %></td>
    <td><%= button_to "Edit",edit_product_path(product),method: :get %></td>
    <td><%= button_to "Orders",product_orders_path(product),method: :get %></td>
  </tr>
  <% end %>
</table>

<div >
  <%= button_to "Add New product",new_product_path, method: :get,align:'left' %>
</div>
