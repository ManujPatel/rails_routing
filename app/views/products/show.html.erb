<h1>Products#show</h1>
<table>
<th>Title</th>
<th>Description</th>
<th>Price</th>

<tr>
<td><%= @product.title %></td>
<td><%= @product.description %></td>
<td><%= @product.price %></td>
</tr>
</table>
<p><%= button_to "Edit Product", edit_product_path(@product),method: :get %></p>
<p><%= button_to "Delete Product", product_path(@product),method: :delete %></p>
<p><%= button_to "Back", products_path,method: :get %></p>
</tr>
<h3>Order Details:</h3>
<table> 
  <% if @product.orders.any? %>
    <th>Quantity</th>
    <th>Total_price</th>
    <th>Edit</th>
    <% @product.orders.each do |order| %>
    <tr>  
        <td><%= order.quantity %></td>
        <td><%= order.total_price %></td>
        <td><%= button_to "Edit Order",edit_product_order_path(@product,order),method: :get %></td>
    <% end %>
  <%end%>  
</table>